# Database
DATABASE_URL=postgresql://username:password@localhost/dukira_webhook_db

# Redis for Celery
REDIS_URL=redis://localhost:6379/0

# JWT Secret
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Google Cloud Storage
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_BUCKET_NAME=your-bucket-name
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# Shopify OAuth
SHOPIFY_CLIENT_ID=your-shopify-client-id
SHOPIFY_CLIENT_SECRET=your-shopify-client-secret
SHOPIFY_REDIRECT_URI=http://localhost:8000/auth/shopify/callback

# WooCommerce OAuth
WOOCOMMERCE_CLIENT_ID=your-woocommerce-client-id
WOOCOMMERCE_CLIENT_SECRET=your-woocommerce-client-secret
WOOCOMMERCE_REDIRECT_URI=http://localhost:8000/auth/woocommerce/callback

# Wix OAuth
WIX_CLIENT_ID=your-wix-client-id
WIX_CLIENT_SECRET=your-wix-client-secret
WIX_REDIRECT_URI=http://localhost:8000/auth/wix/callback

# AI Model API (customize based on your AI service)
AI_MODEL_API_URL=your-ai-model-endpoint
AI_MODEL_API_KEY=your-ai-model-api-key

# App Settings
APP_NAME=Dukira Webhook API
DEBUG=True
HOST=0.0.0.0
PORT=8000